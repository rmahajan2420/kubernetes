apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: qa-location
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: qa-location
    spec:
      containers:
      - name: qa-location
        image: ttndfame/qa_location:qa-12.3.4
        ports:
        - containerPort:  8080
        readinessProbe:
          httpGet:
            path: /heartbeat
            port: 8080
          initialDelaySeconds: 200
          timeoutSeconds: 1
        env:
        - name: ENV_NAME
          value:  qa
        - name: MODULE
          value:  location
---
apiVersion: v1
kind: Service
metadata:
  name: qa-location
spec:
  ports:
    - name: "www"
      port: 80
      targetPort: 8080
  type: LoadBalancer
  selector:
    run: qa-location
